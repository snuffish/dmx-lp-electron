{
    "compilerOptions": {
        "target": "ESNext",
        "module": "umd",
        "lib": [
            "ES2015",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020",
            "ESNext",
            "dom"
        ],
        "jsx": "react",
        "noEmit": true,
        "sourceMap": true,
        /* Strict Type-Checking Options */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        /* Module Resolution Options */
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "paths": {
          "Core/*": ["./app/src/core/*"],
          "Redux/*": ["./app/src/redux/*"],
          "I18n/*": ["./app/localization/*"],
          "Components/*": ["./app/src/components/*"],
          "Constants/*": ["./app/src/constants/*"],
          "Pages/*": ["./app/src/pages/*"],
          "Utils/*": ["./app/src/utils/*"]
        }
    },
    "include": [
        "app/src"
    ]
}